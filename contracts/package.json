{
  "name": "transparent-healthcare",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "truffle": "truffle start",
    "build": "truffle compile && yarn run bundle-contracts",
    "test": "truffle test",
    "eject": "react-scripts eject",
    "start": "truffle migrate",
    "bundle-contracts": "jq -s '.[] | {contract:.contractName,abi:.abi}' build/contracts/* | jq -s . > shared/contracts.json"
  },
  "dependencies": {
    "solc": "^0.6.1",
    "truffle": "^5.1.8",
    "node-jq": "1.11.0"
  },
  "devDependencies": {
    "chai": "^4.2.0",
    "truffle-assertions": "^0.9.2"
  }
}
